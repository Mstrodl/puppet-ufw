# /etc/default/ufw
#
# THIS IS SPECIAL DEFAULT FILE FOR ACCEPTANCE TESTS
# The github runners do not support ipv6, so tests might fail for some docker images
# if we use the standard "default" file.
IPV6=no
DEFAULT_INPUT_POLICY="DROP"
DEFAULT_OUTPUT_POLICY="ACCEPT"
DEFAULT_FORWARD_POLICY="DROP"
DEFAULT_APPLICATION_POLICY="SKIP"
MANAGE_BUILTINS=no
IPT_SYSCTL=/etc/ufw/sysctl.conf
IPT_MODULES=""
